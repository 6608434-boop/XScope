"""

from flask import jsonify, session
from routes.chat import chat_bp
from utils.decorators import login_required
from services.chat import get_user_chats

import logging

logger = logging.getLogger(__name__)


@chat_bp.route('/list')
@login_required
def list_chats():
    """
    –í–æ–∑–≤—Ä–∞—â–∞–µ—Ç —Å–ø–∏—Å–æ–∫ —á–∞—Ç–æ–≤ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –≤ —Ñ–æ—Ä–º–∞—Ç–µ JSON.

    Returns:
        JSON: –°–ø–∏—Å–æ–∫ —á–∞—Ç–æ–≤
    """
    user_id = session['user_id']
    logger.info(f"üìã API –∑–∞–ø—Ä–æ—Å —Å–ø–∏—Å–∫–∞ —á–∞—Ç–æ–≤ –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {user_id}")

    chats = get_user_chats(user_id)

    return jsonify({
        'success': True,
        'chats': chats,
        'count': len(chats)
    })
#!/usr/bin/env python
# -*- coding: utf-8 -*-

"""
================================================================================
–§–ê–ô–õ: config/__init__.py
–ù–ê–ó–ù–ê–ß–ï–ù–ò–ï: –°–±–æ—Ä–∫–∞ –≤—Å–µ—Ö –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–π –≤ –µ–¥–∏–Ω—ã–π –æ–±—ä–µ–∫—Ç
–ê–í–¢–û–†: Oliver Vance
–î–ê–¢–ê: 2026-02-14

–û–ü–ò–°–ê–ù–ò–ï:
    –≠—Ç–æ—Ç —Ñ–∞–π–ª –∏–º–ø–æ—Ä—Ç–∏—Ä—É–µ—Ç –≤—Å–µ —Å–µ–∫—Ü–∏–∏ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏ –∏ –æ–±—ä–µ–¥–∏–Ω—è–µ—Ç –∏—Ö
    –≤ –µ–¥–∏–Ω—ã–π –∫–ª–∞—Å—Å Config. –¢–∞–∫–∂–µ –æ–ø—Ä–µ–¥–µ–ª—è–µ—Ç, –∫–∞–∫–æ–µ –æ–∫—Ä—É–∂–µ–Ω–∏–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å
    (development/production/testing) –Ω–∞ –æ—Å–Ω–æ–≤–µ –ø–µ—Ä–µ–º–µ–Ω–Ω–æ–π FLASK_ENV.

–ò–°–ü–û–õ–¨–ó–û–í–ê–ù–ò–ï:
    from config import config

    # –ü–æ–ª—É—á–∏—Ç—å –ª—é–±–æ–π –ø–∞—Ä–∞–º–µ—Ç—Ä
    db_url = config.DATABASE_URL
    secret = config.SECRET_KEY

    # –ü—Ä–æ–≤–µ—Ä–∏—Ç—å –æ–∫—Ä—É–∂–µ–Ω–∏–µ
    if config.IS_DEVELOPMENT:
        # –¥–µ–ª–∞–µ–º —á—Ç–æ-—Ç–æ –¥–ª—è —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏

–ü–ê–†–ê–ú–ï–¢–†–´:
    FLASK_ENV - —Ç–µ–∫—É—â–µ–µ –æ–∫—Ä—É–∂–µ–Ω–∏–µ (development/production/testing)
    IS_DEVELOPMENT - True –µ—Å–ª–∏ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∞
    IS_PRODUCTION - True –µ—Å–ª–∏ –ø—Ä–æ–¥–∞–∫—à–Ω
    IS_TESTING - True –µ—Å–ª–∏ —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ

–ò–°–¢–û–†–ò–Ø –ò–ó–ú–ï–ù–ï–ù–ò–ô:
    2026-02-14 - Oliver - —Å–æ–∑–¥–∞–Ω–∏–µ
================================================================================
"""

import os
import logging
from typing import Optional, Type

# –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –ª–æ–≥–∏—Ä–æ–≤–∞–Ω–∏—è
logger = logging.getLogger(__name__)

# ===== –ò–º–ø–æ—Ä—Ç–∏—Ä—É–µ–º –≤—Å–µ —Å–µ–∫—Ü–∏–∏ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏ =====
from config.base import BaseConfig
from config.database import DatabaseConfig
from config.api_keys import APIConfig
from config.security import SecurityConfig
from config.features import FeatureConfig

# ===== –ò–º–ø–æ—Ä—Ç–∏—Ä—É–µ–º –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏ –æ–∫—Ä—É–∂–µ–Ω–∏–π =====
try:
    from config.environments.development import DevelopmentConfig
except ImportError:
    DevelopmentConfig = None
    logger.debug("DevelopmentConfig –Ω–µ –Ω–∞–π–¥–µ–Ω")

try:
    from config.environments.production import ProductionConfig
except ImportError:
    ProductionConfig = None
    logger.debug("ProductionConfig –Ω–µ –Ω–∞–π–¥–µ–Ω")

try:
    from config.environments.testing import TestingConfig
except ImportError:
    TestingConfig = None
    logger.debug("TestingConfig –Ω–µ –Ω–∞–π–¥–µ–Ω")


class Config(
    BaseConfig,
    DatabaseConfig,
    APIConfig,
    SecurityConfig,
    FeatureConfig
):
    """
    –ò—Ç–æ–≥–æ–≤—ã–π –∫–ª–∞—Å—Å –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏, –æ–±—ä–µ–¥–∏–Ω—è—é—â–∏–π –≤—Å–µ —Å–µ–∫—Ü–∏–∏.

    –ü–æ—Ä—è–¥–æ–∫ –Ω–∞—Å–ª–µ–¥–æ–≤–∞–Ω–∏—è –≤–∞–∂–µ–Ω: –ø–æ—Å–ª–µ–¥–Ω–∏–π –∫–ª–∞—Å—Å –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª—è–µ—Ç
    –ø—Ä–µ–¥—ã–¥—É—â–∏–µ, –µ—Å–ª–∏ –µ—Å—Ç—å –æ–¥–∏–Ω–∞–∫–æ–≤—ã–µ –∞—Ç—Ä–∏–±—É—Ç—ã.

    –≠—Ç–æ—Ç –∫–ª–∞—Å—Å —Å–æ–¥–µ—Ä–∂–∏—Ç –í–°–ï –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è –≤ –æ–¥–Ω–æ–º –º–µ—Å—Ç–µ.
    """

    # ===== –û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ –æ–∫—Ä—É–∂–µ–Ω–∏—è =====
    # –¢–µ–∫—É—â–µ–µ –æ–∫—Ä—É–∂–µ–Ω–∏–µ (development, production, testing)
    FLASK_ENV = os.environ.get('FLASK_ENV', 'development')

    # –£–¥–æ–±–Ω—ã–µ —Ñ–ª–∞–≥–∏ –¥–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏ –æ–∫—Ä—É–∂–µ–Ω–∏—è
    IS_DEVELOPMENT = FLASK_ENV == 'development'
    IS_PRODUCTION = FLASK_ENV == 'production'
    IS_TESTING = FLASK_ENV == 'testing'

    @classmethod
    def get_environment_config(cls) -> Optional[Type]:
        """
        –í–æ–∑–≤—Ä–∞—â–∞–µ—Ç –∫–ª–∞—Å—Å –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏ –¥–ª—è —Ç–µ–∫—É—â–µ–≥–æ –æ–∫—Ä—É–∂–µ–Ω–∏—è.

        Returns:
            Optional[Type]: –ö–ª–∞—Å—Å –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏ –∏–ª–∏ None
        """
        if cls.IS_DEVELOPMENT:
            return DevelopmentConfig
        elif cls.IS_PRODUCTION:
            return ProductionConfig
        elif cls.IS_TESTING:
            return TestingConfig
        return None

    @classmethod
    def validate_all(cls) -> bool:
        """
        –ü—Ä–æ–≤–µ—Ä—è–µ—Ç –≤—Å–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏.

        Returns:
            bool: True –µ—Å–ª–∏ –≤—Å–µ –ø—Ä–æ–≤–µ—Ä–∫–∏ –ø—Ä–æ–π–¥–µ–Ω—ã

        Raises:
            ValueError: –µ—Å–ª–∏ –∫—Ä–∏—Ç–∏—á–µ—Å–∫–∞—è –Ω–∞—Å—Ç—Ä–æ–π–∫–∞ –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç
        """
        logger.info(f"üîç –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏ –¥–ª—è –æ–∫—Ä—É–∂–µ–Ω–∏—è: {cls.FLASK_ENV}")

        # –ü—Ä–æ–≤–µ—Ä—è–µ–º –±–∞–∑—É –¥–∞–Ω–Ω—ã—Ö
        try:
            DatabaseConfig.validate()
            logger.info("‚úÖ DatabaseConfig: OK")
        except ValueError as e:
            logger.error(f"‚ùå DatabaseConfig: {e}")
            raise

        # –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å–µ–∫—Ä–µ—Ç–Ω—ã–π –∫–ª—é—á (–Ω–µ –∫—Ä–∏—Ç–∏—á–Ω–æ, –Ω–æ –ø—Ä–µ–¥—É–ø—Ä–µ–∂–¥–∞–µ–º)
        if cls.SECRET_KEY == 'your-secret-key-here-change-in-production':
            logger.warning(
                "‚ö†Ô∏è SECRET_KEY –∏—Å–ø–æ–ª—å–∑—É–µ—Ç –∑–Ω–∞—á–µ–Ω–∏–µ –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é! "
                "–ò–∑–º–µ–Ω–∏—Ç–µ –µ–≥–æ –≤ .env –¥–ª—è –ø—Ä–æ–¥–∞–∫—à–Ω–∞."
            )

        # –ü—Ä–æ–≤–µ—Ä—è–µ–º API –∫–ª—é—á–∏ (–ª–æ–≥–∏—Ä—É–µ–º –ø—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏—è)
        api_status = APIConfig.validate_all()
        for service, status in api_status.items():
            if status:
                logger.info(f"‚úÖ {service} API: –∫–ª—é—á –Ω–∞–π–¥–µ–Ω")
            else:
                logger.info(f"‚ÑπÔ∏è {service} API: –∫–ª—é—á –Ω–µ –∑–∞–¥–∞–Ω (—Ñ—É–Ω–∫—Ü–∏—è –æ—Ç–∫–ª—é—á–µ–Ω–∞)")

        # –ü—Ä–æ–≤–µ—Ä—è–µ–º —Ñ–ª–∞–≥–∏ —Ñ—É–Ω–∫—Ü–∏–π
        feature_status = FeatureConfig.get_feature_status()
        logger.info(f"üìä –í–∫–ª—é—á–µ–Ω–æ –ø—Ä–æ—Ñ–∏–ª–µ–π: {feature_status['profiles_count']}/9")

        logger.info("‚úÖ –í—Å–µ –ø—Ä–æ–≤–µ—Ä–∫–∏ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏ –ø—Ä–æ–π–¥–µ–Ω—ã")
        return True


# ===== –°–æ–∑–¥–∞–µ–º –µ–¥–∏–Ω—ã–π –æ–±—ä–µ–∫—Ç –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏ =====
# –≠—Ç–æ —Ç–æ, —á—Ç–æ –±—É–¥—É—Ç –∏–º–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å –¥—Ä—É–≥–∏–µ –º–æ–¥—É–ª–∏
config = Config()

# –î–ª—è —É–¥–æ–±—Å—Ç–≤–∞ –º–æ–∂–Ω–æ –∏–º–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å –æ—Ç–¥–µ–ª—å–Ω—ã–µ –∫–ª–∞—Å—Å—ã
__all__ = [
    'config',
    'Config',
    'BaseConfig',
    'DatabaseConfig',
    'APIConfig',
    'SecurityConfig',
    'FeatureConfig',
]


# ===== –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞ –ø—Ä–∏ –∏–º–ø–æ—Ä—Ç–µ =====
# –≠—Ç–æ –ø–æ–º–æ–∂–µ—Ç —Å—Ä–∞–∑—É —É–≤–∏–¥–µ—Ç—å –ø—Ä–æ–±–ª–µ–º—ã —Å –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–µ–π
if not os.environ.get('SKIP_CONFIG_VALIDATION'):
    try:
        config.validate_all()
    except Exception as e:
        logger.error(f"‚ùå –û—à–∏–±–∫–∞ –≤–∞–ª–∏–¥–∞—Ü–∏–∏ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏: {e}")
        # –ù–µ –æ—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ, —Ç–æ–ª—å–∫–æ –ª–æ–≥–∏—Ä—É–µ–º